<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AttendanceFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvShowClasses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btnCreateNewClass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateNewClass"
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/deep_blue"
        android:fontFamily="@font/poppins_bold"
        android:visibility="gone"
        android:gravity="center|center_vertical|center_horizontal"
        android:text="Create a new Class"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/rvShowClasses"
        app:layout_constraintStart_toStartOf="@id/rvShowClasses"
        app:layout_constraintEnd_toEndOf="@id/rvShowClasses"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="15sp" />




</androidx.constraintlayout.widget.ConstraintLayout>