<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_round_outline">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/civReplyProfile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircleImageView_Style"
                android:src="@drawable/default_avatar"
                />

        </RelativeLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/grey"
                app:shapeAppearance="@style/MessageReceivedShape_Style">
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flexboxlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:flexDirection="column"
                    app:alignItems="flex_start"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start">

                    <TextView
                        android:id="@+id/tvReplierName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bishal Mukherjee"
                        android:padding="8dp"

                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvReplyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="ajbsjkabdjkbjkdbajkbjkabjkbjkbjkasdadaasasda"/>
                </com.google.android.flexbox.FlexboxLayout>

            </com.google.android.material.card.MaterialCardView>



        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>